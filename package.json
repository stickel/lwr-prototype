{
    "name": "core-prototype",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "types": "build/index.d.ts",
    "type": "module",
    "main": "build/index.js",
    "files": [
        "build/**/*.js"
    ],
    "scripts": {
        "clean": "rm -rf build && rm -rf __lwr_cache__ && rm tsconfig.tsbuildinfo",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0 -c ./config/.eslintrc.js --ignore-path ./config/.eslintignore",
        "format": "prettier --write '{modules,config,doc}/**/*.{js,ts,json,md}' --config ./config/.prettierrc --ignore-path ./config/.prettierignore",
        "prettier": "prettier --check '{modules,config,doc}/**/*.{js,ts,json,md}' --config ./config/.prettierrc --ignore-path ./config/.prettierignore",
        "build": "tsc -b && node ./scripts/copy-resources.mjs",
        "dev": "lwr serve --port 3333",
        "start": "lwr serve --port 3000 --mode prod"
    },
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@babel/preset-typescript": "^7.9.0",
        "@babel/register": "^7.9.0",
        "@babel/plugin-transform-modules-commonjs": "^7.15.4",
        "@lwrjs/label-module-provider": "^0.4.4",
        "@salesforce-ux/design-system": "^2.16.1",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "core-js": "^3.18.1",
        "cpx2": "^4.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "fs": "^0.0.1-security",
        "jest": "^27.1.1",
        "lightning-base-components": "^1.13.2-alpha",
        "lwc": "~2.3.7",
        "lwr": "0.5.5",
        "postcss": "^8.3.6",
        "prettier": "^2.4.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.3"
    },
    "volta": {
        "node": "14.17.6",
        "yarn": "1.22.5"
    },
    "engines": {
        "node": ">=14.17.6 <15"
    }
}
