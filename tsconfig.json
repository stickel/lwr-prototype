{
    "compilerOptions": {
        // "allowJs": true,
        // "checkJs": true,
        // "emitDeclarationOnly": true,
        "experimentalDecorators": true,
        "strict": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "composite": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "baseUrl": "src",
        "rootDir": "src",
        "outDir": "build",
        "paths": {
            // TODO: would be great if this worked. :|
            // "@setup/*": ["modules/setup/*"],
            // In the meantime...
            // Modules for the routes
            "setup/router": ["modules/setup/router/router.ts"],
            "setup/home": ["modules/setup/home/home.ts"],
            "setup/homePageHandler": ["modules/setup/homePageHandler/homePageHandler.ts"],
            "setup/namedPageHandler": ["modules/setup/namedPageHandler/namedPageHandler.ts"],
            "setup/navigation": ["modules/setup/navigation/navigation.ts"],
            "setup/navItem": ["modules/setup/navItem/navItem.ts"],
            "setup/pageHeader": ["modules/setup/pageHeader/pageHeader.ts"],
            "setup/mfaAssistant": ["modules/setup/mfaAssistant/mfaAssistant.ts"],
            "setup/releastUpdates": ["modules/setup/releastUpdates/releastUpdates.ts"],
            "setup/lexTransitionAssistant": ["modules/setup/lexTransitionAssistant/lexTransitionAssistant.ts"],
            "setup/mobileQuickstart": ["modules/setup/mobileQuickstart/mobileQuickstart.ts"],
            "setup/lightningUsage": ["modules/setup/lightningUsage/lightningUsage.ts"],
            "setup/optimizer": ["modules/setup/optimizer/optimizer.ts"],
            "setup/Slack": ["modules/setup/Slack/Slack.ts"],
            "setup/modal": ["modules/setup/modal/modal.ts"],
            "setup/modalCreateBroadcastChannel": ["modules/setup/modalCreateBroadcastChannel/modalCreateBroadcastChannel.ts"],
            "setup/modalCreateBroadcastChannelBasics": ["modules/setup/modalCreateBroadcastChannelBasics/modalCreateBroadcastChannelBasics.ts"],
            "setup/modalSelectOnboardingChannels": ["modules/setup/modalSelectOnboardingChannels/modalSelectOnboardingChannels.ts"],
            "setup/radioGroupWithHint": ["modules/setup/radioGroupWithHint/radioGroupWithHint.ts"],
            "setup/renderer": ["modules/setup/renderer/renderer.ts"],
            // "setup/": ["modules/setup//.ts"],
            // Base LWR modules needed
            "lwr/router": ["../node_modules/@lwrjs/router/build/modules/lwr/router/router.d.ts"],
            "lwr/routerUtils": ["../node_modules/@lwrjs/router/build/modules/lwr/routerUtils/routerUtils.d.ts"],
            "lwr/navigation": ["../node_modules/@lwrjs/router/build/modules/lwr/navigation/navigation.d.ts"],
            "lwr/navigationContext": ["../node_modules/@lwrjs/router/build/modules/lwr/navigationContext/navigationContext.d.ts"],
            "lwr/navigationService": ["../node_modules/@lwrjs/router/build/modules/lwr/navigationService/navigationService.d.ts"],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        // "**/__tests__/**",
        // "**/build/**",
        // "**/cjs/**",
        "build"
    ]
}