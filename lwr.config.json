{
    "port": 3333,
    "rootDir": "/Users/mstickel/easy-prototype",
    "lwc": {
        "modules": [
            {
                "dir": "$rootDir/src/modules"
            },
            {
                "npm": "lwc-components-lightning"
            }
        ]
    },
    "bundleConfig": {
        "exclude": [ "lwc", "@lwc/synthetic-shadow", "lwr/navigation" ]
    },
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/assets"
        }
    ],
    "moduleProviders": [
        [
            "@lwrjs/label-module-provider",
            {
                "provideDefault": true,
                "labelDirs": [
                    {
                        "dir": "$rootDir/src/labels",
                        "package": "@my/label"
                    }
                ]
            }
        ],
        "@lwrjs/app-service/moduleProvider",
        "@lwrjs/lwc-module-provider",
        "@lwrjs/npm-module-provider"
    ],
    "routes": [
        {
            "id": "cx",
            "path": "/cx",
            "rootComponent": "cx/app",
            "layoutTemplate": "$layoutsDir/cx.njk",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "setup",
            "path": "/setup",
            "rootComponent": "setup/app",
            "layoutTemplate": "$layoutsDir/setup.njk",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "setup-named-page",
            "path": "/setup/:namedPage",
            "rootComponent": "setup/app",
            "layoutTemplate": "$layoutsDir/setup.njk",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "service-console",
            "path": "/service-console",
            "rootComponent": "serviceconsole/app",
            "layoutTemplate": "$layoutsDir/serviceConsole.njk",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "service-console-named-page",
            "path": "/service-console/:namedPage",
            "rootComponent": "serviceconsole/app",
            "layoutTemplate": "$layoutsDir/serviceConsole.njk",
            "bootstrap": {
                "syntheticShadow": true
            }
        }
    ]
}